{
  "manifest_version": 3,
  "name": "AntiCrash",
  "version": "0.5",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injector.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["antiworker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
